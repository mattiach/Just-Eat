{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react/jsx-runtime",
        "plugin:react-hooks/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest", 
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-refresh"
    ],
    "settings": {
        "react": {
            "version": "detect" 
        }
    },
    "rules": {
        "react-refresh/only-export-components": "warn", 
        "react/prop-types": "off" // Disable prop validation
    }
}

